    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    

    <!-- CSS Externo e boostrap-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- Fonte do google fonts - Roboto -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
  </head>
  
  <body>
    <header>
        <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
            
          <a class="navbar-brand" href="/"><img src="/images/bootstrap-solid.svg" width="30" height="30" alt=""> Zetta-Byte</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado" aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="conteudoNavbarSuportado">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item ">
                <a class="nav-link" href="/">Home <span class="sr-only">(página atual)</span></a>
              </li>              
              <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Produtos
                  </a>
                  <!-- Aqui adiciona as lista de produtos  -->
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="#">Gabinetes</a>
                    <a class="dropdown-item" href="#">Monitores</a>
                    <a class="dropdown-item" href="#">Mouses</a>
                    <a class="dropdown-item" href="#">Teclados</a>
                    <a class="dropdown-item" href="#">HDs e SSDs</a>
                    <a class="dropdown-item" href="#">Processadores</a>
                    <a class="dropdown-item" href="#">Placas mãe</a>
                    <a class="dropdown-item" href="#">Placas de vídeo</a>
                    <a class="dropdown-item" href="#">Headsets</a>
                  </div>
                  <!-- fim da lista -->
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/comparar_produtos">Comparar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/carrinho">Carrinho</a>
                </li>
                <li class="nav-item">
                    <% if(msg != "") {%>
                        <a class="nav-link text-success" href="/logout">Logout - <%= msg %></a>
                    <% } else {%>
                        <a class="nav-link" href="/login">Login</a>
                    <% } %>
                </li>
            </ul>
            
          </div>
      </nav>
    </header>
    <main>

        <div>
            <br>
            <h4 class="centro">Comparar Produtos</h4>
            <br>

            <form action="/comparaprodutos" method="POST">
            <div class="row">
                <div class="container col-sm-1 col-md-1 col-lg-1 col-xl-1"></div>
                <div class="container col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <select name="prod1" id="prod1" class="form-control" autofocus>
                        <% dados.forEach(function(dado){ %>
                            <option value="<%=dado._id%>"> 
                                <%= dado.nomeproduto %> 
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="container col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <select name="prod2" id="prod2" class="form-control">
                        <% dados.forEach(function(dado){ %>
                            <option value="<%=dado._id%>"> 
                                <%= dado.nomeproduto %> 
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="container col-sm-1 col-md-1 col-lg-1 col-xl-1 form-group">
                    <input type="submit" class="btn btn-primary" value="Comparar">
                </div>
                <div class="container col-sm-1 col-md-1 col-lg-1 col-xl-1"></div>
            </div>
            <br>
            </form>

        </div>

        <div class="row">
                <div class="container col-sm-1 col-md-1 col-lg-1 col-xl-1   "></div>
                <div class="container col-sm-5 col-md-5 col-lg-5 col-xl-5   ">
                
                    <% if(dadosum[0] != undefined ){ %>
                        
                        <% dadosum.forEach(function(dado){ %>

                            <img class="img-thumbnail  img-fluid imgdetalhe " src='/<%= dado.img %>' alt="foto produto"> 

                            <dl>
                                    <dt> <b> Nome do produto:</b> </dt><dd><%= dado.nomeproduto %></dd>
                                    
                                    <dt> <b> Marca: </b></dt><dd><%= dado.fabricante %></dd>
                                
                                    <dt><b> Tipo de produto:</b></dt> <dd><%= dado.tipo %> </dd>
                                
                                    <dt><b> Preço:</b></dt> <dd>R$<%= dado.preco %>,00</dd> 
                                
                                    <dt><b> Quantidade Disponível: </b></dt> <dd><%= dado.quantidade %> unid</dd>
                                
                                    <dt><b> descrição do produto: </b></dt> <dd><%= dado.descricao%></dd>
                                    
                                </dl>
                                <a href="" class="btn btn-sm btn-info">Adicionar no Carrinho</a>
                        <% }) %>


                    <% } %>
                </div>
                <div class="container col-sm-5 col-md-5 col-lg-5 col-xl-5">
    
                    
                    <% if(dadosdois[0] != undefined){ %>
                        <% dadosdois.forEach(function(dado){ %>
                            <img class="img-thumbnail  img-fluid imgdetalhe " src='/<%= dado.img %>' alt="foto produto"> 

                            <dl>
                                    <dt> <b> Nome do produto:</b> </dt><dd><%= dado.nomeproduto %></dd>
                                    
                                    <dt> <b> Marca: </b></dt><dd><%= dado.fabricante %></dd>
                                
                                    <dt><b> Tipo de produto:</b></dt> <dd><%= dado.tipo %> </dd>
                                
                                    <dt><b> Preço:</b></dt> <dd>R$<%= dado.preco %>,00</dd> 
                                
                                    <dt><b> Quantidade Disponível: </b></dt> <dd><%= dado.quantidade %> unid</dd>
                                
                                    <dt><b> descrição do produto: </b></dt> <dd><%= dado.descricao%></dd>
                                    
                                </dl>
                                <a href="" class="btn btn-sm btn-info">Adicionar no Carrinho</a>
                        <% }) %>
                    <% } %>
                    
    
                </div>
                <div class="container col-sm-1 col-md-1 col-lg-1 col-xl-1   "></div>
            </div>
    


    </main>
    <!-- Footer -->
    <footer class="page-footer font-small teal pt-4 bg-dark fixar-rodape">

        <!-- Footer Text -->
        <div class="container-fluid text-center text-md-left">
      
          <!-- Grid row -->
          <div class="row">
      
            <!-- Grid column -->
            <div class="col-md-6 mt-md-0 mt-3">
      
              <!-- Content -->
              <h5 class="text-uppercase font-weight-bold white">Qualidade</h5>
              <p class="white">Lorem ipsum dolor sit, amet consectetur adipisicing elit.</p>
      
            </div>
            <!-- Grid column -->
      
            <hr class="clearfix w-100 d-md-none pb-3">
      
            <!-- Grid column -->
            <div class="col-md-6 mb-md-0 mb-3">
      
              <!-- Content -->
              <h5 class="text-uppercase font-weight-bold white">Satisfação</h5>
              <p class="white">Lorem ipsum, dolor sit amet consectetur adipisicing elit.</p>
      
            </div>
            <!-- Grid column -->
      
          </div>
          <!-- Grid row -->
      
        </div>
        <!-- Footer Text -->
      
       
      
      </footer>
      <!-- Footer -->
  </body>
</html>
